@model List<Category>
@*<partial name="_Notification"/>*@
<div >
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    category List
                </h2>    
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> New Category
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead class="bg-primary text-white">
        <tr>
    <th>
        Category Name 
    </th>
    <th>
        Display Order
    </th>
        
    </tr>
    </thead>
    <tbody>
            @foreach(var data in Model.OrderBy(u=>u.DisplayOrder))
            {
        <tr>
            <td>@data.Name</td>
            <td>@data.DisplayOrder</td>
                    
                    <td>
                        <div class=" w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@data.Id" asp-controller="Category" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@data.Id" asp-controller="Category" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                        </div>
                    </td>
    
        </tr>
            }
    </tbody>
</table>
</div>